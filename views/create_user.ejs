<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<script>
    // automatically add http:// to a url if there isn't already a protocol
    // use with onblur executes the script when the user leaves the input field
    function checkURL(abc) { 
        var string = abc.value;
        if (!~string.indexOf("http")) {
            string = "http://" + string;
        }
        abc.value = string;
        return abc
    }</script>
<body>
<h1>Create User</h1>
<form method="post" action="/users/create">
    <label>
        Name:
        <input type="text" name="name" required/>
    </label>
    <label>
        Username:
        <input type="text" name="username" required/>
    </label>
    <label>
        Email:
        <input type="email" name="email" required/>
    </label>
    <label>
        ProfileImageUrl: 
        <input type="url" name="profileImageUrl" required onblur="checkURL(this)"/>
    </label>
    <label>
        CoverImageUrl:
        <input type="url" name="coverImageUrl" required onblur="checkURL(this)"/>
    </label>
    <button type="submit">Submit</button>
</form>
</body>
<%- include('_footer') -%>
</html>