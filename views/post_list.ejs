<html lang="en-gb">
<%- include('_head') -%>
    <%- include('_header') -%>

        <body>
            <h1>Posts</h1>
            <ol>
                <% results.forEach(function(post) {%>
                    <li>
                        <img src=<%=post.imageUrl %> alt=<%=post.message%> />
                        <p><%= post.message %> </p>
                        <p> Created on: <%= post.createdAt.slice(0, 10).split("-").reverse().join("-") %> </p>
                        <p> Posted by: <%=post.postedBy.name%></p>
                    </li>
                    <% }); %>
            </ol>
            <div class="footer">
                <%if (next) { %>
                    <a href="<%= next %>">Next</a> <% } %>
                <%if (previous) { %>
                    <a href="<%= previous %>">Previous</a> <% } %>
            </div>
        </body>
        <%- include('_footer') -%>

</html>