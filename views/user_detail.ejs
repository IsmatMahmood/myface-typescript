<html lang="en-gb">
<%- include('_head') -%>
    <%- include('_header') -%>

        <body>
            <img class="user_cover" src=<%=coverImageUrl %> >
            <div class="user_details">
                <img class="user_profile" src=<%=profileImageUrl %> >
                <div class="user_detail2">
                    <h1 class="user_name">
                        <%= name %>
                    </h1>
                    <h2 class="user_username">
                        <%= username %>
                    </h2>
                    <h2 class="user_email">
                        <%= email %>
                    </h2>
                </div>
            </div>

            <div class="post_section">
                <h3 class="post_header">
                    <%= name.split(" ")[0] %>'s Posts</h3>
        <div class="posts">
                        <% posts.forEach(function(post) {%>
                            <li class="post">
                                <img class="post_img" src=<%=post.imageUrl %>>
                                <h4 class="post_username">
                                    <%= username %> 
                                </h4>
                                <h4 class="post_date">
                                    <%= post.createdAt.slice(0, 10).split("-").reverse().join("-") %>
                                </h4>
                                <h5 class="post_message">
                                    <%= post.message %>
                                </h5>
                            </li>
                            <%}); %>
            </div>
            </div>
            <div class="post_section">
                <h3 class="post_header">
                    Posts <%= name.split(" ")[0] %> Liked</h3>
        <div class="posts">
                        <% likes.forEach(function(post) {%>
                            <li class="post">
                                <img class="post_img" src=<%=post.imageUrl %>>
                                <h4 class="post_username">
                                    <%= username %>
                                </h4>
                                <h4 class="post_date">
                                    <%= post.createdAt.slice(0, 10).split("-").reverse().join("-") %>
                                </h4>
                                <h5 class="post_message">
                                    <%= post.message %>
                                </h5>
                            </li>
                            <%}); %>
            </div>
            </div>
            <div class="post_section">
                <h3 class="post_header">
                    Posts <%= name.split(" ")[0] %> Disliked</h3>
        <div class="posts">
                        <% dislikes.forEach(function(post) {%>
                            <li class="post">
                                <img class="post_img" src=<%=post.imageUrl %>>
                                <h4 class="post_username">
                                    <%= username %>
                                </h4>
                                <h4 class="post_date">
                                    <%= post.createdAt.slice(0, 10).split("-").reverse().join("-") %>
                                </h4>
                                <h5 class="post_message">
                                    <%= post.message %>
                                </h5>
                            </li>
                            <%}); %>
            </div>
            </div>
        </body>
        <%- include('_footer') -%>

</html>